            .DataSource(dataSource =>
            {
                dataSource.Read(read => read.Action("Read", "Product_Promotion"));
                dataSource.PageSize(4);

            })
             .Events(events => { events.DataBound("dataBound"); })
            .Pageable()
            )
        </div>
