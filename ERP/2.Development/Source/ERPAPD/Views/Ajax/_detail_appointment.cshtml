@{
    Layout = null;
}

    <div class="row-fluid form-horizontal">
        <div class="span12">
            <div class="control-group">
                <label class="control-label">Tiêu đề</label>
                <div class="controls">
                    <input disabled name="Title" class="span12" type="text" id="" placeholder="Tiêu đề" value="@ViewBag.appointment.Title" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Ngày giờ</label>
                <div class="controls">
                    <div class="input-append">
                        <input disabled id="date-picker-app" value="@ViewBag.appointment.Date.ToString("dd/MM/yyyy")" name="Date" class="span6" placeholder="dd/mm/yyyy hh:mm" type="text" data-format="dd/MM/yyyy">
                        <span class="add-on">
                            <i class="icon-calendar"></i>
                        </span>
                        <input disabled type="number" name="Hours" class="span3 offset2" placeholder="Số tiếng" value="@ViewBag.appointment.Hours" />
                    </div>
                </div>
            </div>

        </div>
        <div class="control-group">
            <label class="control-label">Loại</label>
            <div class="controls">

                    @foreach (var item in ViewBag.listAppointmentType)
                    {
                        if (item.ParamID == ViewBag.appointment.Type)
                        {
                            <input disabled type="text" class="span12" placeholder="Loại" value="@item.Value" />
                        }
                    }

            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Địa điểm</label>
            <div class="controls">
                <input name="Address" class="span12" type="text" id="" placeholder="Địa điểm" value="@ViewBag.appointment.Address" disabled/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Mô tả</label>
            <div class="controls">
                <textarea disabled name="Description" class="span12" placeholder="Mô tả" style="overflow: hidden; word-wrap: break-word; resize: vertical; height: 60px; margin-left: 0px; margin-right: 0px; ">@ViewBag.appointment.Description</textarea>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Khách hàng</label>
            <div class="controls">
                <input class="span12" type="text" value="@ViewBag.appointment.CustomerName" disabled />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Người liên hệ</label>
            <div class="controls">
                <input disabled class="span12" name="Bcc" type="text" id="" placeholder="Bcc" value="@ViewBag.appointment.Name" />
               
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Khách mời</label>

            <div class="controls">
                <input disabled class="span12" name="Bcc" type="text" id="" placeholder="Bcc" value="@ViewBag.appointment.Guests" />
                
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Bcc</label>
            <div class="controls">
                <input disabled class="span12" name="Bcc" type="text" id="" placeholder="Bcc" value="@ViewBag.appointment.Bcc" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Đính kèm tập tin</label>
            <div class="controls">
                <input name="Files" type="text" id="" value="@ViewBag.appointment.Files" disabled/>
            </div>
        </div>

    </div>
