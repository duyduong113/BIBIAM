@model ERPAPD.Models.Users
<div class="span12" style="border-bottom: dotted 1px #ccc; padding: 0 0 10px 0">
    <div class="pull-left">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img style="width: 70px !important; float: left; margin-right:10px;margin-top:5px" src="@Url.Content("~/Content/image/upload/" + Model.ImageUrl)">
        }
        else
        {
            <img style="width: 70px !important; float: left; margin-right: 10px; margin-top: 5px" src="@Url.Content("~/Content/image/upload/default_avartar.png")">
        }
    </div>
   
    <div>
        <span style="color: #00B4C1; font-weight: bold; font-size: 12px"> Xin chào, @Model.FullName </span>
        @if (!string.IsNullOrWhiteSpace(Model.LevelDescription))
        {
            <span>- [@Model.LevelDescription]</span>
        }
        <br />
        Đội bán: @Model.TeamDescription - Phòng ban: @Model.DepartmentDescription - Chức vụ: @Model.Position - Cấp: @Model.LevelDescription
        <br />
        XLiteID: @Model.info.XLiteID - Ext: Ext - Tài khoản: @Model.UserName
        <br />
        <span style="color: #F75033; font-weight: bold"> Tổng doanh số đóng góp: [Đang phát triển] </span>
    </div>
</div>