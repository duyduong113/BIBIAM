@model IEnumerable<ERPAPD.Models.DC_OCM_Territory>

@(Html.Kendo().DropDownListFor(m => m)
                  .AutoBind(false)
                  .OptionLabel("Chọn...")
                  .DataTextField("ten_phan_cap")
                  .DataValueField("ma_phan_cap")
                  .Filter("contains")
                  .DataSource(dataSource =>
                  {
                      dataSource.Read(read => read.Action("GetHierarchyByLevel", "Product_Hierarchy", new { cap = "5" }).Data("filterCayPhanCap5"))
                                .ServerFiltering(false);
                  })
                .CascadeFrom("CayPhanCap4")
                .CascadeFromField("ma_phan_cap_cha")
                .Events(events => { events.Select("onSelect5"); })
)
@Html.ValidationMessageFor(m => m)