            <div class="top-menu">
                @{
                    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
                }

                @using (Html.BeginForm("SetCulture", "Home", new { returnUrl = ViewBag.controllerName }, FormMethod.Post, new { id = "cultureForm", @style = "display:none;" }))
                {
                    if (culture == "vi")
                    {

                        <input name="culture" value="en-us" type="text" />
                    }
                    else
                    {
                        <input name="culture" value="vi" type="text" />
                    }
                }
                <ul class="nav navbar-nav pull-right">
                    @*@Html.Partial("_Notification")*@
                    @Html.Partial("_LoginPartial")
                    <!-- END USER LOGIN DROPDOWN -->
                    <li class="dropdown dropdown-user">
                        @if (culture == "vi")
                        {
                            <a href="javascript: document.getElementById('cultureForm').submit()" style="background-color: #274584; color: white; font-size: 13px; font-weight: 300;">
                                <i class="fa fa-globe"></i> English
                            </a>
                        }
                        else
                        {
                            <a href="javascript: document.getElementById('cultureForm').submit()" style="background-color: #274584; color: white; font-size: 13px; font-weight: 300; ">
                                <i class="fa fa-globe"></i> Tiếng Việt
                            </a>
                        }

