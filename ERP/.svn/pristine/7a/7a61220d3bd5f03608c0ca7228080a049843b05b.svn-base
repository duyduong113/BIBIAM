    @Scripts.Render("~/bundles/layout")

    <script>
        function PostAndBlock(url, parameter, fun) {
            $.blockUI({ message: '<i class="fa fa-spinner fa-3x fa-lg fa-spin txt-color-blueDark"></i>', theme: false });
            $.post(url, parameter, function (data) {
                $.unblockUI();
                fun(data);
            }).fail(function (error) {
                $.unblockUI();
                $.gritter.add({
                    title: '',
                    text: "Server Error",
                    class_name: 'gritter-error'
                });
            });
        }
        function ConvertOutDate(Status, OutDate) {
            if (Status == 3) {
                return "background-color:#FFCC80";
            }
            else if (Status == 4) {
                return "background-color:#FB8C00";
            }
            else {
                return "";
            }
        }
        function convertDateToUTC(date) { return new Date(date.getUTCFullYear(), date.getUTCMonth(), date.getUTCDate(), date.getUTCHours(), date.getUTCMinutes(), date.getUTCSeconds()); }
        function ConvertTimeZone(data, gmt) {
            //console.log(gmt);
            //console.log(data);
            ////utc
            //console.log(data.toUTCString());
            //console.log(new Date(data.toUTCString()).getTime());
            //
            //offset
            var offset = gmt * 60 * 60 * 1000;
            //console.log(offset);
            //console.log(new Date(new Date(convertDateToUTC(data)).getTime() + offset));
            if (data == null)
                return "";
            return kendo.toString(kendo.parseDate(new Date(new Date(convertDateToUTC(data)).getTime() + offset)), "@Resources.Multi.DateFormat HH:mm");
        }
        function SaveExtensionAndCall() {
            var XliteCode = $("#inputExtension").val();
            var Phone = $("#hiddenPhoneCall").val();
            $.post(r + "/Home/SaveXliteCode/", { XliteCode: XliteCode }, function (data) {
                $(document).ajaxStart($.blockUI({ message: '<i class="icon-spinner icon-spin blue bigger-125" style="font-size:30px;"></i>', theme: false })).ajaxStop($.unblockUI);

                if (data.success) {
                    $("#editXliteCode").text(XliteCode);
                    $("#ExtentionInputWindow").data("kendoWindow").close();
                    XliteCall(Phone);
                } else {
                    $.gritter.add({
                        // (string | mandatory) the heading of the notification
                        title: "@Resources.Multi.Error",
                        // (string | mandatory) the text inside the notification
                        text: data.message,
                        class_name: 'gritter-error'
                    });
                }
            });
        }
        function XliteCall(phone) {
            $(document).ajaxStart($.blockUI({ message: '<i class="icon-spinner icon-spin blue bigger-125" style="font-size:30px;"></i>', theme: false })).ajaxStop($.unblockUI);
            $.post(r + "/Telesale/Call", { mobile: phone }, function (data) {
                if (!data.success) {
                    if (data.message == "Chưa có extension!") {
                        $("#ExtentionInputWindow").data("kendoWindow").center().open();
                        $("#hiddenPhoneCall").val(phone);
                    }
                    $.gritter.add({
                        title: "@Resources.Multi.Error",
                        text: data.message,
                        class_name: 'gritter-error'
                    });
                }
            });
        }

        $("#editXliteCode").editable(function (value, settings) {
            var oldValue = $(this).data("oldvalue");
            if (value) {
                $.post(r + "/Home/SaveXliteCode/", { XliteCode: value }, function (data) {
                    if (data.success) {
                        $("#editXliteCode").text(value);
                    } else {
                        $.gritter.add({
                            // (string | mandatory) the heading of the notification
                            title: "@Resources.Multi.Error",
                            // (string | mandatory) the text inside the notification
                            text: data.message,
                            class_name: 'gritter-error'
                        });
                        $("#editXliteCode").text(oldValue);
                    }
                });
                return ("@Resources.Multi.Saving...");
            } else
                return
        }, {
            indicator: "@Resources.Multi.Saving...",
            cssclass: 'inline-xlite-width',
            tooltip: "@Resources.Multi.ClickToEdit...",
            event: "dblclick",
            data: function (value, settings) {
                return '';
            },
            style: "inherit",
        });

        function locdau(str) {
            //code by Minit - www.canthoit.info - 13-05-2009
            str = str.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a");
            str = str.replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g, "e");
            str = str.replace(/ì|í|ị|ỉ|ĩ/g, "i");
            str = str.replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g, "o");
            str = str.replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u");
            str = str.replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y");
            str = str.replace(/đ/g, "d");

            str = str.replace(/À|Á|Ạ|Ả|Ã|Â|Ầ|Ấ|Ậ|Ẩ|Ẫ|Ă|Ằ|Ắ|Ặ|Ẳ|Ẵ/g, "A");
            str = str.replace(/È|É|Ẹ|Ẻ|Ẽ|Ê|Ề|Ế|Ệ|Ể|Ễ/g, "E");
            str = str.replace(/Ì|Í|Ị|Ỉ|Ĩ/g, "I");
            str = str.replace(/Ò|Ó|Ọ|Ỏ|Õ|Ô|Ồ|Ố|Ộ|Ổ|Ỗ|Ơ|Ờ|Ớ|Ợ|Ở|Ỡ/g, "O");
            str = str.replace(/Ù|Ú|Ụ|Ủ|Ũ|Ư|Ừ|Ứ|Ự|Ử|Ữ/g, "U");
            str = str.replace(/Ỳ|Ý|Ỵ|Ỷ|Ỹ/g, "Y");
            str = str.replace(/Đ/g, "D");

            str = str.replace(/!|\$|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|,|\.|\:| |\"|\&|\#|\[|\]|~/g, " ");
            str = str.replace(/-+-/g, "-"); //thay thế 2- thành 1-
            str = str.replace(/^\-+|\-+$/g, "");//cắt bỏ ký tự - ở đầu và cuối chuỗi
            return str;
        }
        var currentuserid = "@User.Identity.Name";

        function loadMenu() {
            var listAsset = "@ERPAPD.Models.Users.ListAsset()";
            var data = listAsset.split(',');
            if (data.indexOf("All") > -1) {

            } else {
                if (data.length > 0) {
                    $("li[controllername]").each(function () {
                        $(this).css("display", "none");
                    });
                    $("li[controllername]").each(function () {
                        if (data.indexOf($(this).attr('controllername')) > -1) {
                            $(this).css("display", "block");
                        }
                    });
                    for (var i = 0; i < data.length; i++) {
                        var a = $('[controllername=' + data[i] + ']');
                        if (a.length > 0) {
                            $(a).css('display', 'block');
                            $(a).closest('.submenu').closest('li').css('display', 'block');
                            $(a).closest('.submenu').closest('.submenu').closest('li').css('display', 'block');
                        }
                    }
                }
                $('.nav-list').find('.subLI').each(function () {
                    var li = $(this).find('.submenu').find('li');
                    var i = 0;
                    $(this).find('.submenu').find('li').each(function () {
                        if ($(this).css('display') == "none") {
                            i++;
                        }
                    });
                    if (li.length == i) {
                        $(this).css('display', 'none');
                    }
                });
                $('.nav-list').find('.subLI').each(function () {
                    var li = $(this).find('.submenu').find('li');
                    var i = 0;
                    $(this).find('.submenu').find('li').each(function () {
                        if ($(this).css('display') == "none") {
                            i++;
                        }
                    });
                    if (li.length == i) {
                        $(this).css('display', 'none');
                    }
                });
            }
        }
        loadMenu();

        var pathname = window.location.pathname.toLowerCase();
        $('.nav-list a').each(function () {
            if ($(this).attr("href").toLowerCase() == pathname) {
                var parent = $(this).parent("li");
                parent.addClass("active");
                if (parent.parent("ul").parent("li").length > 0) {
                    parent.parent("ul").parent("li").addClass("active open");
                    if (parent.parent("ul").parent("li").parent("ul").parent("li").length > 0) {
                        parent.parent("ul").parent("li").parent("ul").parent("li").addClass("active open");
                    }
                }
            }
        });

