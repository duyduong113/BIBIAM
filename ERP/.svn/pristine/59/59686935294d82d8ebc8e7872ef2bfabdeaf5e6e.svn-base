                  .Filter("contains")
                  .DataSource(dataSource =>
                  {
                      dataSource.Read(read => read.Action("GetHierarchyByLevel", "Merchant_Product_Hierarchy", new { cap = "8" }).Data("filterCayPhanCap8"))
                                .ServerFiltering(false);
                  })
                  .CascadeFrom("CayPhanCap7")
