<style>
    a:hover {
        color: red;
    }

    .title {
        color: #f37c2b;
        font: 700 20px arial;
        text-decoration: none;
        cursor: pointer;
    }

    .date {
        color: #CCCCCC;
        padding-bottom: 10px;
    }

    .category_content {
        border-bottom: 1px solid #DCDCDC;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

    .title_news {
        font: 700 16px arial;
        color: #00B4C1;
        text-decoration: none;
        cursor: pointer;
    }

        .title a:hover, .title_news a:hover {
            color: blue;
        }

    .block_image_news width_common {
        width: 100%;
        float: left;
    }

    .thumb {
        width: 180px;
        height: 108px;
        float: left;
        cursor: pointer;
        overflow: hidden;
        padding-right: 10px;
        text-align: center;
    }

    .block_image_news .news_lead {
        float: none;
        margin: 0;
        width: auto;
        font-size: 13px;
        min-height: 108px;
        text-align: justify;
        padding-right: 10px;
    }

    .thumb img {
        width: 180px;
        overflow: hidden;
        text-align: center;
    }



    h5, .h5 {
        font-size: 14px;
        text-align: justify;
    }

    .detail {
        padding: 0px;
        line-height: 13px;
        /* text-rendering: geometricPrecision; */
        color: rgb(51, 51, 51);
        font-family: arial;
        font-size: 13px;
    }

    .title-article {
        /*color: #BDBDBD;*/
        color: #00B4C1;
    }

    .title-article-detail {
        color: #AFAFAF !important;
    }

    .ProgressBar {
        width: 500px;
        height: 25px;
        background-color: rgb(200,200,200);
        z-index: 0;
    }

    .ProgressBar2 {
        position: absolute;
        z-index: 1;
        background-color: green;
        height: 25px;
        color: #fff;
    }

    .ProgressBartitle {
        font-size: 1.3em;
        font-weight: bold;
        display: inline-block;
    }
</style>

