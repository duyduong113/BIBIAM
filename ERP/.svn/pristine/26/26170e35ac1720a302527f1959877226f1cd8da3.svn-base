            </div>
        </div>
        <div class="row-fluid">
            <div class="span12" style="margin-bottom: 10px; float: left">
                @(Html.Kendo().ListView<ERPAPD.Models.DC_Article>()
                .Name("Grid1")
                .HtmlAttributes(new { @style = "border:none;overflow:auto;" })
