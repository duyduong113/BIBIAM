        @*$('#PlanRevenue').ProgressBar({
            name: "Revenue (VND)"
            , Value: @PlanHomePage.Revenue
            , PlanValue: @PlanHomePage.PlanRevenue
            });
        $('#PlanRegister').ProgressBar({
            name: "Register (iCare Account)"
           , Value: @PlanHomePage.Register
           , PlanValue: @PlanHomePage.PlanRegister
           });*@
