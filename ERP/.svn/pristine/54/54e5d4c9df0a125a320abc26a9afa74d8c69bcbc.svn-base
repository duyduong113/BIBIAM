@{
    Layout = null;
}
<div id="body_print">
    <style type="text/css">
        .body-print {
            margin: 0 auto;
            font-size: 12pt;
            color: #000;
            margin: 0px auto;
            max-width: 750px;
            background-color: #fff;
            padding-bottom: 50px;
        }

            .body-print div, .body-print p, .body-print td, .textdaudong p span {
                font-family: "Times New Roman" !important;
            }

        .hiddenTable {
            background-color: #fff;
            border: 0.5pt solid #ccc;
        }

        .text_head {
            text-align: center;
            font-weight: bold;
        }

        .textheadh2 {
            font-weight: bold;
            text-transform: uppercase;
            margin-top: 2mm;
            padding-top: 6px;
        }

        .mt-comments .mt-comment .mt-comment-img > img {
            border-radius: 50% !important;
        }

        .mt-comments .mt-comment .mt-comment-body {
            padding-left: 20px;
            position: relative;
            overflow: hidden;
        }

        .textdaudong {
            margin-left: 5mm;
        }

        .headertxt {
            text-align: center;
            font-weight: bold;
        }


        .tab_head {
            text-align: center;
        }

        .tdtxt {
            text-align: center;
        }

        #body_print p {
            margin: 0 0 2px;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }
    </style>
