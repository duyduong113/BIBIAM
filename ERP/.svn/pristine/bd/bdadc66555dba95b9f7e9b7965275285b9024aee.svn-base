<body class="login">
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
        {
            <div class="logo">
                <a href="@Url.Content("~/")">
                    <img class="logo-format" src="@Url.Content("~/Content/images/logo thietbinhanh.png")" alt="" width="300" />
                </a>
            </div>
            @Html.AntiForgeryToken()
            <h3 class="form-title">@Resources.Global._sign_up_now</h3>
            @Html.ValidationSummary(true, "", new { @class = "help-block" })
            <div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, @Resources.Global._username, new { @class = "required" })
                        <div class="input-icon">
                            <i class="fa fa-circle-thin"></i>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-solid placeholder-no-fix", placeholder = "john.nguyen" })
                        </div>
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "help-block" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FullName, @Resources.Global._fullname, new { @class = "" })
                        <div class="input-icon">
                            <i class="icon-user"></i>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control placeholder-no-fix", placeholder = "John Nguyen" })
                        </div>
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "help-block" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, @Resources.Global._phone_number, new { @class = "" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control placeholder-no-fix", placeholder = "0909xxxxxx" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, @Resources.Global._password, new { @class = "" })
                        <div class="input-icon">
                            <i class="fa fa-eye-slash"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, @Resources.Global._email , new { @class = "" })
                        <div class="input-icon">
                            <i class="fa fa-at"></i>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", placeholder = "youremail@domain.com" })
                        </div>
                       @Html.ValidationMessageFor(m => m.Email, "", new { @class = "help-block" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ten_gian_hang, @Resources.Global._shop_name , new { @class = "" })
                        @Html.TextBoxFor(m => m.ten_gian_hang, new { @class = "form-control placeholder-no-fix", placeholder = "Bibiam" })
                        @Html.ValidationMessageFor(m => m.ten_gian_hang, "", new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.website, @Resources.Global._url_shop , new { @class = "" })
                        @Html.TextBoxFor(m => m.website, new { @class = "form-control placeholder-no-fix", placeholder = "Bibiam" })
                       
                    </div>
                </div>
                <div>
                    <div class="form-actions">
                        <a class="btn btn-block" href="@Url.Content("~/")">@Resources.Global._go_back</a>
                        <button type="submit"  class="btn red btn-block uppercase">@Resources.Global._register</button>
                    </div>
                </div>
            </div>
        }

        @Html.Partial("AndroidIOS")
        @{
            var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
        }

        @using (Html.BeginForm("SetCulture", "Default", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "cultureForm", @style = "display:none;" }))
            {
                if (culture == "vi")
                {
                <input name="culture" value="en-us" type="text" />
            }
            else
            {
                <input name="culture" value="vi" type="text" />
            }
        }

        @if (culture == "vi")
            {
            <div class="text-left" style="margin-top:10px; font-size: 11px; text-align: center;">
                <a href="javascript: document.getElementById('cultureForm').submit()" style="font-size: 13px; font-weight: 300;">
                    <i class="fa fa-globe"></i> English
                </a> | @Html.Raw(Resources.Global._copyright)
            </div>
        }
        else
        {
            <div class="text-left" style="margin-top:10px; font-size: 11px; text-align: center;">
                <a href="javascript: document.getElementById('cultureForm').submit()" style="font-size: 13px; font-weight: 300; ">
                    <i class="fa fa-globe"></i> Tiếng Việt
                </a> | @Html.Raw(Resources.Global._copyright)
            </div>
        }

    </div>

