        .img-thumbnail, body {
            background-color: #fff !important;
        }

        .login .logo {
            margin: 10px 0 -20px 0 !important;
        }

        .login .content {
            background-color: #fff !important;
            width: 580px !important;
            margin: 0 auto !important;
            padding: 0px 43px 15px 40px !important;
            border-radius: 7px !important;
        }

